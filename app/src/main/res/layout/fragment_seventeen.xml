<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="@dimen/margin_sixteen">

        <TextView
            android:id="@+id/txvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_twenty_four"
            android:text="@string/heading_fragments"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_thirty" />

        <LinearLayout
            android:id="@+id/lnlButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvHeading"
            android:layout_marginTop="@dimen/margin_sixteen"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPrevious"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/previous" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_eight"
                android:layout_weight="1"
                android:text="@string/next" />
        </LinearLayout>

        <TextView
            android:id="@+id/txvQuestionSeventeen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnlButtons"
            android:layout_marginTop="@dimen/margin_eight"
            android:text="@string/religion"
            android:textSize="@dimen/text_size_twenty_four" />

        <RadioGroup
            android:id="@+id/rdgSeventeen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvQuestionSeventeen">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rdgHindu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hindu" />

                <RadioButton
                    android:id="@+id/rdgBuddhism"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/buddhism" />

                <RadioButton
                    android:id="@+id/rdgChristian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/christian" />

                <RadioButton
                    android:id="@+id/rdgMuslim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/muslim" />

                <RadioButton
                    android:id="@+id/rdgKirati"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kirati" />

                <RadioButton
                    android:id="@+id/rdgOther"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/other" />
            </LinearLayout>
        </RadioGroup>
    </RelativeLayout>
</ScrollView>