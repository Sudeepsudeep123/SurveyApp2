<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.survey.project.application.features.form.section3.Fragment6Sec3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/washHandAfterToilet"
            android:textSize="@dimen/normal_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPrevious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_margin"
                android:layout_weight="1"
                android:text="@string/previous" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_margin"
                android:layout_weight="1"
                android:text="@string/next" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radWashHandOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rbCha"
                android:layout_width="match_parent"
                android:text="@string/cha"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/rbChaina"
                android:layout_width="match_parent"
                android:text="@string/chaina"
                android:layout_height="wrap_content"/>
        </RadioGroup>
    </LinearLayout>

</FrameLayout>